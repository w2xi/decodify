{
  "manifest_version": 3,
  "name": "Decodify",
  "version": "0.0.2",
  "description": "自动检测并解码页面中的Base64编码文本",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.v2ex.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon/logo16.png",
      "48": "icon/logo48.png",
      "128": "icon/logo128.png"
    }
  },
  "icons": {
    "16": "icon/logo16.png",
    "48": "icon/logo48.png",
    "128": "icon/logo128.png"
  }
} 